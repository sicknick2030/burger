<div class="container">
	<div class="row">
		<div class="col-sm-6">
			<p>Burgers to Eat! (YaY!!)</p>
			{{#each burgers}}
				{{#unless this.devoured}}
					<div>
						<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
							<li class="form-control">{{id}}. {{burger_name}}</li>
							<span class="input-group-btn">
	                  			<button class="btn btn-success devour-button" type="submit">Devour It!</button>
	                		</span>
	                	</form>
					</div>
				{{/unless}}
			{{/each}}
		</div>
		<div class="col-sm-6">
			<p>Burgers you already ate. (boo hoo)</p>
			{{#each burgers}}
				{{#if this.devoured}}
					<div>
						<li class="form-control">{{id}}. {{burger_name}}</li>
						<span class="input-group-btn">
                  			<button class="btn btn-danger devour-button" type="submit">Already Eaten (Sorry)</button>
                		</span>
					</div>
				{{/if}}
			{{/each}}
		</div>
	</div>
	<div class="row">
		<p>Enter a burger you want to eat and click Place Order.</p>
		<div class="col-sm-12">
			<form action="/burger/create" method="POST">
				<input type="text" id="burger-input" name="burger_name" value='' id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Place Order</button>
			</form>
		</div>
	</div>
</div>